<resources>
    <style name="TitleText">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>



    <style name="Hammer" />

    <!-- Font -->
    <style name="Hammer.Font" />
    <style name="Hammer.Font.Bold">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button -->
    <style name="Hammer.Button" />
    <style name="Hammer.Button.Oval">
        <item name="android:background">@drawable/oval_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/Hammer.Font.Bold</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:height">@dimen/button_height</item>
    </style>
</resources>
