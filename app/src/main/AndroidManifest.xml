<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pickth.hammer">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.NoTitle">
    <activity android:name=".view.activity.MainActivity"/>

    <activity
        android:name=".view.activity.SplashActivity"
        android:theme="@style/AppTheme.NoTitle.SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".view.activity.DetailActivity"/>
    <activity android:name=".view.activity.SignInActivity"/>
    <activity android:name=".view.activity.SignUpActivity"/>
    <activity android:name=".view.activity.SignInWithEmailActivity"/>
  </application>

</manifest>